{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"baseUrl": "./",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"include": [
		"next-env.d.ts",
		"components/**/*.ts",
		"components/**/*.tsx",
		"elements/**/*.ts",
		"elements/**/*.tsx",
		"layouts/**/*.ts",
		"layouts/**/*.tsx",
		"pages/**/*.ts",
		"pages/**/*.tsx",
		"src/**/*.ts",
		"src/**/*.tsx",
		"node_modules/eslint-plugin-react/lib/types.d.ts"
	],
	"exclude": [
		"node_modules",
		".next",
		"out"
	]
}
